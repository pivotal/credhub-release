#!/bin/bash

trust_store_password=TRUST_STORE_PASSWORD_PLACEHOLDER
<%
java_command = "\texec chpst -u $RUNAS:$RUNAS java \\
-Xmx${MAX_HEAP_SIZE}m \\
-Dspring.profiles.active=prod \\
-Dspring.config.additional-location=/var/vcap/jobs/credhub/config/application.yml \\
-Dlog4j.configurationFile=/var/vcap/jobs/credhub/config/log4j2.properties \\
-Djava.security.egd=file:/dev/urandom \\
-Djna.boot.library.path=/var/vcap/packages/credhub/ \\
-Djava.io.tmpdir=$TMP_DIR \\
-Djdk.tls.ephemeralDHKeySize=4096 \\
-Dfile.encoding=UTF-8 \\
-Djdk.tls.namedGroups=\"secp384r1\" \\"

if p('credhub.data_storage.require_tls') || p('credhub.authentication.uaa.enabled')
  java_command += "-Djavax.net.ssl.trustStore=/var/vcap/jobs/credhub/config/trust_store.jks \\
  -Djavax.net.ssl.trustStorePassword=${trust_store_password} \\"
end

java_command += "-ea -jar *.jar --management.server.port=" + p('credhub.health_endpoint_port').to_s
%>


<% if p("credhub.authentication.uaa.enabled") %>
uaa_health_check() {
    status=`curl --max-time 5 --connect-timeout 2 -k --silent <%= p(["credhub.authentication.uaa.internal_url", "credhub.authentication.uaa.url"]) %>/healthz`
    if [ $? -ne 0 ]; then
      echo "Could not reach the UAA server"
      exit 1
    fi

    if [ $status != "ok" ]; then
      exit 1
    fi
    echo "Successfully connected to UAA, continuing startup"
}
<% end %>


RUN_DIR=/var/vcap/sys/run/credhub
LOG_DIR=/var/vcap/sys/log/credhub
TMP_DIR=/var/vcap/jobs/credhub/tmp
PIDFILE=${RUN_DIR}/pid
RUNAS=vcap
MAX_HEAP_SIZE=<%= p('credhub.max_heap_size') %>

mkdir -p /var/vcap/jobs/credhub/tmp

export JAVA_HOME=/var/vcap/packages/openjdk_11/jre
export PATH=$JAVA_HOME/bin:$PATH

exec > >(tee -a >(logger -p user.info -t vcap.$(basename $0).stdout)   | grep -Ev '^$' | awk -W interactive '{ system("echo -n [$(date +\"%Y-%m-%d %H:%M:%S%z\")]"); print " " $0 }' >> ${LOG_DIR}/credhub.stdout.log)
exec 2> >(tee -a >(logger -p user.error -t vcap.$(basename $0).stderr) | grep -Ev '^$' | awk -W interactive '{ system("echo -n [$(date +\"%Y-%m-%d %H:%M:%S%z\")]"); print " " $0 }' >> ${LOG_DIR}/credhub.stderr.log)

case $1 in

  start)
    <% if p("credhub.authentication.uaa.enabled") %>
    uaa_health_check
    <% end %>
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R $RUNAS:$RUNAS $RUN_DIR $LOG_DIR $TMP_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/credhub
    <%= java_command %>
    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}"

    ;;

esac
